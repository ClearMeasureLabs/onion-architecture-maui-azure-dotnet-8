@page "/counter"

<h1>Counter</h1>

<p role="status">Current count: @Model</p>

<button class="btn btn-primary" @onclick="IncrementCount!" ref="clickMeButton2">Click me</button>

@code {
    public int Model { get; set; }

    protected void OnViewInitialized()
    {
        Model = 0;
       
    }

    private void IncrementCount()
    {
        Model++;
    }

}
