{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerappName": {
      "defaultValue": "mycontainerapp",
      "type": "String"
    },
    "location": {
      "defaultValue": "canadacentral",
      "type": "String"
    },
    "environment_name": {
      "defaultValue": "myenvironment",
      "type": "String"
    },
    "container_image": {
      "defaultValue": "onionarchitecturemauidotnet8azdo.azurecr.io/churchbulletin.ui:1.1.66",
      "type": "String"
    },
    "passwordSecretRef": {
      "defaultValue": "pwsr",
      "type": "String"
    },
    "registry_password": {
      "defaultValue": "registryPass",
      "type": "SecureString"
    },
    "connection_string": {
      "defaultValue": "connStr",
      "type": "SecureString"
    },
    "http_port": {
      "defaultValue": 8080,
      "type": "int"
    },
    "registry_login_server": {
      "defaultValue": "registryLogin",
      "type": "string"
    },
    "app_id": {
      "defaultValue": "appId",
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2022-03-01",
      "type": "Microsoft.App/containerApps",
      "name": "[parameters('containerappName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "None"
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environment_name'))]",
        "configuration": {
          "secrets": [
            {
              "name": "registrypassword",
              "value": "[parameters('registry_password')]"
            }
          ],
          "ingress": {
            "external": true,
            "targetPort": "[parameters('http_port')]",
            "allowInsecure": false,
            "traffic": [
              {
                "latestRevision": true,
                "weight": 100
              }
            ]
          },
          "registries": [
            {
              "server": "[parameters('registry_login_server')]",
              "username": "[parameters('app_id')]",
              "passwordSecretRef": "[parameters('passwordSecretRef')]"
            }
          ]
        },
        "template": {
          "revisionSuffix": "[uniqueString(resourceGroup().id, deployment().name)]",
          "containers": [
            {
              "name": "main",
              "image": "[parameters('container_image')]",
              "env": [
                {
                  "name": "HTTP_PORT",
                  "value": "8080"
                },
                {
                  "name": "ConnectionStrings__SqlConnectionString",
                  "value": "[parameters('connection_string')]"
                }
              ],
              "resources": {
                "cpu": 0.25,
                "memory": "0.5Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 0,
            "maxReplicas": 1,
            "rules": [
              {
                "name": "http-rule",
                "http": {
                  "metadata": {
                    "concurrentRequests": "1"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ]
}